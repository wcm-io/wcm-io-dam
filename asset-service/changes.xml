<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="1.3.0" date="2017-04-04">
      <action type="update" dev="sseifert">
        Switch to AEM 6.1 and Java 8 as minimum versions.
      </action>
      <action type="update" dev="sseifert">
        Update to wcm.io Handler 1.x implementation.
      </action>
      <action type="update" dev="sseifert">
        Set AEM API and OSGi dependencies to provided scope.
      </action>
    </release>

    <release version="1.2.0" date="2015-12-16">
      <action type="fix" dev="amuthmann" issue="WDAM-2">
        Added non-caching header for Dataversion call.
      </action>
      <action type="add" dev="sseifert">
        Add alternative data version generation strategy based on affected DAM asset's checkums.
      </action>
      <action type="update" dev="sseifert" issue="WDAM-1">
        Add alternative REST interface syntax which accepts parameters encoded in suffix string instead of URL parameters to be more dispatcher-friendly.
        Old REST format is still supported, but deprecated.
      </action>
    </release>

    <release version="1.1.0" date="2015-08-21">
      <action type="add" dev="sseifert">
        Add support for a data version which is stable when Assets in DAM are not modified.
      </action>
      <action type="add" dev="sseifert">
        Support restricting the areas of DAM which should be served by the services with a list of DAM content paths in configuration.
      </action>
      <action type="add" dev="sseifert">
        Add "mimeType" property for asset items.
      </action>
    </release>

    <release version="1.0.0" date="2015-07-22">
      <action type="add" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
